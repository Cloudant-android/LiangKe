<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_margin="6dp"
            android:weightSum="2"
            android:padding="2.5px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/pon">

            <Button
                android:id="@+id/message_conversation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="消息"
                android:scaleType="matrix"
                android:background="@drawable/btn_color_nomal"
                android:textColor="@color/em_main_botton_text_color"
                android:textSize="14sp"
                />
            <Button
                android:id="@+id/group_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_color_nomal"
                android:textSize="14sp"
                android:scaleType="matrix"
                android:textColor="@color/em_main_botton_text_color"
                android:text="群聊"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/contact_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/contact_more" />

    </RelativeLayout>

<FrameLayout
    android:id="@+id/fragment_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</FrameLayout>





</LinearLayout>