<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/de_frm_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rg_img_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-300dp"
            android:scaleType="center"
            android:src="@mipmap/bg_register" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/de_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dip"
            android:src="@mipmap/ima" />

        <com.mchat.api.view.ClearWriteEditText
            android:id="@+id/reg_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="5dip"
            android:hint="@string/nickname"
            android:inputType="textPersonName"
            android:maxLength="32"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FFF"
            android:textColorHint="#FFFFFF" />



        <com.mchat.api.view.ClearWriteEditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="5dip"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:maxLines="1"
            android:textColor="#FFF"
            android:textColorHint="#FFFFFF" />
        <com.mchat.api.view.ClearWriteEditText
            android:id="@+id/reg_repassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="5dip"
            android:hint="@string/repassword"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:maxLines="1"
            android:textColor="#FFF"
            android:textColorHint="#FFFFFF" />


        <Button
            android:id="@+id/reg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rs_select_btn_gray"
            android:clickable="false"
            android:text="@string/register"
            android:textColor="#FFF" />
    </LinearLayout>


    <TextView
        android:id="@+id/reg_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:text="@string/forgot_password"
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reg_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:text="@string/Login"
        android:textColor="#999999"
        android:textSize="14sp" />

</RelativeLayout>